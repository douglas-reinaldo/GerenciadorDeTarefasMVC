@model GerenciadorDeTarefas.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <form asp-action="Cadastro" method="post">
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label"></label>
                            <input asp-for="Senha" class="form-control" type="password" />
                            <span asp-validation-for="Senha" class="text-danger small"></span>
                        </div>

                        @Html.AntiForgeryToken()

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Criar</button>
                        </div>

                        <div class="text-center">
                            <a asp-area="" asp-controller="Usuario" asp-action="Login">
                                Já tem cadastro? Faça Login
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
