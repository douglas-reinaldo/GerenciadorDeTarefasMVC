@model GerenciadorDeTarefas.Models.Usuario

@{
    ViewData["Title"] = "Logout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">

                    <h2 class="mb-4">@ViewData["Title"]</h2>

                    <p class="mb-2"><strong>Nome:</strong> @Html.DisplayFor(m => m.Nome)</p>
                    <p class="mb-4"><strong>Email:</strong> @Html.DisplayFor(m => m.Email)</p>

                    <form asp-action="LogoutConfirmado" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger">
                                Sair
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
