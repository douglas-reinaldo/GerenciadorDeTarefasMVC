@model GerenciadorDeTarefas.Models.Usuario;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Logout";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="LogoutConfirmado" method="post">
            <div class="form-group">
                <p><strong>Nome: </strong> @Html.DisplayFor(m => m.Nome)</p>
                <p> <strong>Email: </strong> @Html.DisplayFor(m => m.Email)</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Sair" class="btn btn-primary mt-5" />
            </div>
        </form>
    </div>
</div>