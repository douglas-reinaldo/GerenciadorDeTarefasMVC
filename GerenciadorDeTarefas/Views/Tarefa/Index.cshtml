@model IEnumerable<Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<h1>@ViewData["Title"]</h1>
<a asp-action="Create" asp-controller="Tarefa" class="btn btn-primary mb-3">+ Criar Tarefa</a>

<div class="container mt-5">
    <div class="row g-4">
        @foreach (var tarefa in Model)
        {
            <div class="col-md-4 col-sm-6 col-12">
                <div class="card rounded d-flex flex-column m-3 p-4" style="height: 300px;">

                    <a asp-action="Details" asp-route-id="@tarefa.Id" class="text-decoration-none text-dark flex-fill d-block" style="flex: 0 0 60%;">
                        <div class="card-body d-flex flex-column h-100">
                            <div class="d-flex justify-content-between align-items-start mb-2 mt-2">
                                <h4 class="card-title mb-0 flex-grow-1 text-break" style="word-wrap: break-word;">
                                    @tarefa.Titulo
                                </h4>
                                <span class="badge bg-success">@tarefa.Status</span>
                            </div>
                            <p class="card-text text-break mb-2" style="flex-grow: 1; overflow: hidden;">
                                @tarefa.Descricao
                            </p>
                        </div>
                    </a>

                    <div class="d-flex flex-column justify-content-between" style="flex: 0 0 40%; padding: 0 1rem 0.5rem 1rem;">
                        <hr class="my-2">

                        <div class="d-flex justify-content-start mb-1">
                            <a asp-action="Edit" asp-route-id="@tarefa.Id" class="btn btn-primary rounded-pill me-2">Editar</a>
                            <form asp-action="Delete" asp-route-id="@tarefa.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger rounded-pill">Excluir</button>
                            </form>
                        </div>

                        <div>
                            Criado em: <b>@tarefa.DataCriacao.ToString("dd/MM/yyyy")</b>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
