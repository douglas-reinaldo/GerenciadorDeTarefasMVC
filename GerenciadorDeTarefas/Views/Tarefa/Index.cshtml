@model IEnumerable<Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Create" asp-controller="Tarefa" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Criar Tarefa
        </a>
    </div>

    <div class="row g-4">
        @foreach (var tarefa in Model)
        {
            <div class="col-lg-4 col-md-6 col-12">
                <div class="card shadow-sm border-0 h-100">

                    <a asp-action="Details"
                       asp-route-id="@tarefa.Id"
                       class="text-decoration-none text-dark">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title text-truncate mb-0">
                                    @tarefa.Titulo
                                </h5>
                                <span class="badge bg-success">
                                    @tarefa.Status
                                </span>
                            </div>
                            <p class="card-text text-muted text-truncate">
                                @tarefa.Descricao
                            </p>
                        </div>
                    </a>

                    <div class="card-footer bg-white border-0">
                        <div class="d-flex justify-content-start mb-2">
                            <a asp-action="Edit"
                               asp-route-id="@tarefa.Id"
                               class="btn btn-outline-primary btn-sm me-2">
                                Editar
                            </a>

                            <form asp-action="Delete"
                                  asp-route-id="@tarefa.Id"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Tem certeza que deseja excluir esta tarefa?');">
                                <button type="submit"
                                        class="btn btn-outline-danger btn-sm">
                                    Excluir
                                </button>
                            </form>
                        </div>

                        <small class="text-muted">
                            Criado em: <strong>@tarefa.DataCriacao.ToString("dd/MM/yyyy")</strong>
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
