@model IEnumerable<Tarefa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Tarefas";
}

<h1>@ViewData["title"]</h1>


<div class="container mt-5">
    <div class="row g-4">
        @{
            foreach (var tarefa in Model)
            {
                <div class="col-md-4 col-sm-6 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title ">@tarefa.Titulo</h3>
                            <p class="card-text">@tarefa.Descricao</p>
                            <span class="badge bg-success">@tarefa.Status</span>
                            <a href="#" class="btn btn-primary">Link do card</a>
                        </div>
                        <div class="card-footer text-muted">
                            Criado em: @tarefa.DataCriacao.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
    
</div>