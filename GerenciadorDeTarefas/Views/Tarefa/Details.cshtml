@model Tarefa;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">
            <label asp-for="Titulo"></label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Titulo)
        </dd>


        <dt class="col-sm-3">
            <label asp-for="Descricao"></label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class="col-sm-3">
            <label asp-for="DataCriacao"></label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>

        <dt class="col-sm-3">
            <label asp-for="Status"></label>
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>
            <a asp-action="Index">Voltar à lista de tarefas</a>
        </div>
    </dl>
</div>