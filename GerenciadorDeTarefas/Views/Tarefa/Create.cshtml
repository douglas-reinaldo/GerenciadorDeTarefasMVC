@model GerenciadorDeTarefas.Models.ViewModels.TarefaFormViewModel

@{
    ViewData["Title"] = "Criar tarefa";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="tarefa.Titulo" class="form-label"></label>
                            <input asp-for="tarefa.Titulo" class="form-control" />
                            <span asp-validation-for="tarefa.Titulo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tarefa.Descricao" class="form-label"></label>
                            <textarea asp-for="tarefa.Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="tarefa.Descricao" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tarefa.Status" class="form-label"></label>
                            <select asp-for="tarefa.Status" asp-items="@Model.statusLista" class="form-control"></select>
                            <span asp-validation-for="tarefa.Status" class="text-danger small"></span>
                        </div>

                        @Html.AntiForgeryToken()

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Criar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
